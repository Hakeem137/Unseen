{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "/u/**", "destination": "/index.html" },
      { "source": "/dashboard", "destination": "/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
